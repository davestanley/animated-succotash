{
  "dataset_reader": {
    "type": "sequence_tagging",
    "word_tag_delimiter": "//",
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      },
    }
  },
  "train_data_path": "../data/allenTrain.txt",
  "validation_data_path": "../data/allenDev.txt",
  "model": {
    "type": "simple_tagger",
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
            "type": "embedding",
            "embedding_dim": 50,
            "pretrained_file": "~/src/allennlp/glove/glove.6B.50d.txt.gz",
            "trainable": false
        },
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 50,
      "hidden_size": 50,
      "num_layers": 2,
      "dropout": 0.5,
      "bidirectional": true
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size": 32
  },
  "trainer": {
    "optimizer": "adam",
    "num_epochs": 40,
    "patience": 10,
    "cuda_device": 0
  }
}
