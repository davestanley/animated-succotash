{
  "dataset_reader": {
    "type": "sequence_tagging2",
    "word_tag_delimiter": "//",
    "mytokenizer": {
      "type": "word",
      "word_splitter": {
        "type": "whitespacy",
        "pos_tags": true,
        "parse": true,
        "ner": true
      }
    },
    "token_indexers": {
      "ner_tag": {
        "type": "ner_tag",
        "namespace": "ner"
      }
    }
  },
  "train_data_path": "../data/allenTrain.txt",
  "validation_data_path": "../data/allenDev.txt",
  "model": {
    "type": "simple_tagger2",
    "do_crossentropy_weighting": true,
    "Ntags0": 95,
    "Ntags1": 5,
    "text_field_embedder": {
      "token_embedders": {
        "ner_tag": {
            "type": "embedding",
            "vocab_namespace": "ner",
            "embedding_dim": 19
        }
      }
    },
    "encoder": {
      "type": "pass_through",
      "input_dim": 19
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size": 32
  },
  "trainer": {
    "optimizer": "adam",
    "num_epochs": 40,
    "patience": 5,
    "cuda_device": 0
  }
}
