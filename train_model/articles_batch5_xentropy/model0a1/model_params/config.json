{
    "dataset_reader": {
        "type": "sequence_tagging",
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": true
            }
        },
        "word_tag_delimiter": "//"
    },
    "iterator": {
        "type": "basic",
        "batch_size": 32
    },
    "model": {
        "type": "simple_tagger2",
        "encoder": {
            "type": "lstm",
            "bidirectional": true,
            "dropout": 0.5,
            "hidden_size": 25,
            "input_size": 25,
            "num_layers": 2
        },
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 25
                }
            }
        }
    },
    "train_data_path": "../data/allenTrain.txt",
    "validation_data_path": "../data/allenDev.txt",
    "trainer": {
        "cuda_device": 0,
        "num_epochs": 40,
        "optimizer": "adam",
        "patience": 5
    }
}