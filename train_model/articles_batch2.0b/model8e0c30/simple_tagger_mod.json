{
  "dataset_reader": {
    "type": "sequence_tagging2",
    "word_tag_delimiter": "//",
    "mytokenizer": {
      "type": "word",
      "word_splitter": {
        "type": "whitespacy",
        "pos_tags": true,
        "parse": true,
        "ner": true
      }
    },
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    }
  },
  "train_data_path": "../data/allenTrain.txt",
  "validation_data_path": "../data/allenDev.txt",
  "model": {
    "type": "simple_tagger2",
    "do_crossentropy_weighting": true,
    "Ntags0": 95,
    "Ntags1": 5,
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
            "type": "embedding",
            "embedding_dim": 50,
            "pretrained_file": "~/src/allennlp/glove/glove.6B.50d.txt.gz",
            "trainable": false
        }
      }
    },
    "encoder": {
      "type": "pass_through",
      "input_dim": 50
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size": 32
  },
  "trainer": {
    "optimizer": "adam",
    "num_epochs": 40,
    "patience": 5,
    "cuda_device": 0
  }
}
